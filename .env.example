# ===========================================
# Hype Commerce Swiss Tool - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# --- Shopify Storefront API ---
PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token

# --- PostgreSQL Database ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hype_commerce

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- Sanity CMS ---
PUBLIC_SANITY_PROJECT_ID=your-project-id
PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your-sanity-api-token

# --- Cloudinary (Image Optimization) ---
PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name

# --- Sentry (Error Tracking) ---
PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# --- Turnstile (CAPTCHA) ---
PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# --- Application ---
PUBLIC_SITE_URL=http://localhost:5173
SESSION_SECRET=your-session-secret-min-32-chars-long
